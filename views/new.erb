<div class="new-title">
  <h1>新規メモ作成</h1>
  <form action="/memos/new" method="POST">
    <h3>タイトル</h3>
    <div>
      <label for="article"></label>
      <input type="text" name="title" required>
    </div>
    <h3>メモの内容</h3>
    <div>
      <label for="name"></label>
      <textarea name="content" required></textarea>
    </div>
    <div>
      <button type="submit">送信する</button>
    </div>
  </form>
</div>
