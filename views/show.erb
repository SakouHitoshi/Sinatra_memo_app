<div class="show-title">
  <h2>メモタイトル</h2><p><%= h(@memo[0]['title']) %></p>
  <h2>内容</h2><p><%= h(@memo[0]['content']) %></p>
  <form action="/memos/<%= @memo[0]['id'] %>/edit" method="get">
    <input type="submit" value="編集">
  </form>
  <form action="/memos/<%= @memo[0]['id'] %>" method="post">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="削除">
  </form>
  <form action="/" method="get">
    <input type="submit"  value="メモ一覧へ">
  </form>
</div>
